{
  "name": "mithril-mdl",
  "version": "1.0.0",
  "author": "Florian Albertz",
  "license": "BSD-3-Clause",
  "main": "lib/mdl.js",
  "description": "Material Design Lite components via mithril.js",
  "keywords": [
    "mithril",
    "mithril.js",
    "mdl",
    "material design",
    "material design lite"
  ],
  "dependencies": {
    "mithril": "mithril"
  },
  "devDependencies": {
    "babel": "^5.6.14",
    "eslint": "^0.18.0",
    "eslint-plugin-react": "^2.7.1",
    "version-bump": "^0.1.0"
  },
  "scripts": {
    "test": "make lint",
    "prepublish": "make && make lint"
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "node": true
    },
    "plugins": [
      "react"
    ],
    "ecmaFeatures": {
      "modules": true,
      "jsx": true
    },
    "rules": {
      "curly": [
        2,
        "multi-line"
      ],
      "quotes": [
        2,
        "single"
      ],
      "react/jsx-uses-react": [
        2,
        {
          "pragma": "m"
        }
      ]
    }
  }
}
